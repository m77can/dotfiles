# git

alias gst="git status"

alias rime-reload='
if [ -f "/Library/Input Methods/Squirrel.app/Contents/MacOS/Squirrel" ]; then
    /Library/Input\ Methods/Squirrel.app/Contents/MacOS/Squirrel --reload
else
    echo "Rime输入法未安装"
fi'